{% extends 'base.html.twig' %}

{% block title %}This is the title of the child!{% endblock %}

{% block stylesheets %}

	<link rel="stylesheet" href="{{ asset('build/app.css') }}">

{% endblock %}

{% block body %}

	<table class="table table-hover table-striped">
	                    
		<thead>

			<tr>
				<th>â„–</th>
				<th>Name</th>
				<th>Phone number</th>
				<th colspan="2">
					&nbsp;
				</th>
			</tr>

		</thead>

		<tbody>

			<tr v-for="contact in contacts">

				<td>@{{ contact.id }}</td>
				<td>@{{ contact.name }}</td>
				<td>@{{ contact.phone_number }}</td>

				<td width="10px">
					<a href="#" class="btn btn-info" v-on:click.prevent="getContact(contact)">
						Show
					</a>
				</td>
				                            
				<td width="10px">
					<a href="#" class="btn btn-warning btn-sm" v-on:click.prevent="editContact(contact)">
						Edit
					</a>
				</td>
				<td width="10px">
					<a href="#" class="btn btn-danger btn-sm" v-on:click.prevent="deleteContact(contact)">
						Delete
					</a>
				</td>
			</tr>
			
		</tbody>

	</table>

	{{ include('partials/create.html.twig')}}
	{{ include('partials/edit.html.twig')}}
	{{ include('partials/show.html.twig')}}

{% endblock %}

{% block javascripts %}

	<script src="{{ asset('build/app.js') }}"></script>
	
{% endblock %}
