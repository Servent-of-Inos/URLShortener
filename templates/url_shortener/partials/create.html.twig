<b-modal :ok-only ="true" id="create" title="Specify some information:">

    <b-form @submit="makeShortUrl" @reset="onReset">
	    <b-form-group id="UrlInputGroup"
		                label="Url:"
		                label-for="UrlInput"
		                description="Enter url you want to shorten">
		    <b-form-input id="UrlInput"
		                type="text"
		                v-model="newUrl.long_url"
		                required
		                placeholder="example-site.com">
		    </b-form-input>
	    </b-form-group>

	    <b-form-group id="LifetimeInputGroup"
		                label="Lifetime of your url:"
		                label-for="UrlInput"
		                description="This field is optional, if empty your short link will work permanently">
		               
		    <datepicker 
		    	name = "lifetime" v-model="newUrl.lifetime" 
		    	lang="en" type="datetime" format="YYYY-MM-DD HH:mm:ss">
		    </datepicker>
	    </b-form-group>

	    <b-form-checkbox-group v-model="newUrl.is_active" id="ActiveCheck">

	        <b-form-checkbox>Check if active</b-form-checkbox>
	        
        </b-form-checkbox-group>

	        <b-button type="submit" variant="primary btn-sm">Submit</b-button>
	      	<b-button type="reset" variant="danger btn-sm">Reset</b-button>

    </b-form>

</b-modal>