<b-modal ref= "edit" :ok-only ="true" id="edit" title="Edit statistics:">

	<b-form @submit.prevent="updateStatisticRecord" @reset="onResetEditStatisticRecord" autocomplete="off">

		 <b-form-group id="StatisticsTimestampInputGroup"
		                label="Timestamp"
		                label-for="StatisticsTimestampInput"
		                description="Enter timestamp for statistical record:">
		    <datepicker 
		    	name = "StatisticsTimestampInput" v-model="fillStatisticRecord.timestamp" confirm
		    	lang="en" type="datetime" format="YYYY-MM-DD HH:mm">
		    </datepicker>

		</b-form-group>

		<b-form-group id="StatisticsReferrerInputGroup"
		                label="Referrer"
		                label-for="StatisticsReferrerInput"
		                description="Enter referrer for statistical record:">
		    <b-form-input id="StatisticsReferrerInput"
		                type="url"
		                v-model="fillStatisticRecord.referrer"
		                required>
		    </b-form-input>
		</b-form-group>

		<b-form-group id="StatisticsIpInputGroup"
		                label="IP"
		                label-for="StatisticsIpInput"
		                description="Enter IP for statistical record:">
		    <b-form-input id="StatisticsIpInput"
		                type="text"
		                v-model="fillStatisticRecord.ip"
		                required>
		    </b-form-input>
		</b-form-group>

		<b-form-group id="StatisticsBrowserInputGroup"
		                label="Browser"
		                label-for="StatisticsBrowserInput"
		                description="Enter Browser for statistical record:">
		    <b-form-input id="StatisticsBrowserInput"
		                type="text"
		                v-model="fillStatisticRecord.browser"
		                required>
		    </b-form-input>
		</b-form-group>

		<b-button type="submit" variant="primary btn-sm">Submit</b-button>
	    <b-button type="reset" variant="danger btn-sm">Reset</b-button>

	</b-form>

</b-modal>