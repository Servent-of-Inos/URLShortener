<modal name="statistics" weight="auto" height="auto" :scrollable="true">

	<table class="table table-hover table-striped">
		                    
		<thead>

			<tr>
				<th>â„–</th>
				<th>Timestamp</th>
				<th>Referrer</th>
				<th>IP</th>
				<th>Browser</th>
				<th colspan="2">
					&nbsp;
				</th>
			</tr>

		</thead>

		<tbody>

			<tr v-for="record in fillStatistics">

				<td>${ record.id }</td>
				<td>${ record.timestamp }</td>
				<td>${ record.referrer }</td>
				<td>${ record.ip }</td>
				<td>${ record.browser }</td>

				<td width="10px">

					<b-btn v-on:click.prevent="editUrlStatistics(record.id)" variant="warning btn-sm">Edit</b-btn>
					<hr>
					<b-btn v-on:click.prevent="deleteStatisticRecord(record.id)" variant="danger btn-sm">Del</b-btn>

				</td>

			</tr>

			<tr>
				Total hits: ${fillStatistics.length}
			</tr>
	   
		</tbody>

	</table>

</modal>