{% extends 'base.html.twig' %}

{% block title %}This is the title of the child!{% endblock %}

{% block stylesheets %}

	<link rel="stylesheet" href="{{ asset('build/css/app.css') }}">

{% endblock %}

{% block body %}

	<div class="container">

		<div id="target" class="row">

	        <div class="col-xs-4">

	        	<h1 class="page-header">Contact List</h1>

	        </div>

		<table class="table table-hover table-striped">
		                    
			<thead>

				<tr>
					<th>â„–</th>
					<th>Long Url</th>
					<th>Short Url</th>
					<th colspan="2">
						&nbsp;
					</th>
				</tr>

			</thead>

			<tbody>

				<tr v-for="url in urls">

					<td>${ url.id }</td>
	                <td>${ url.long_url }</td>
	                <td>${ url.short_url }</td>

					<td width="10px">
						<a href="#" class="btn btn-info" v-on:click.prevent="getUrl(url)">
							Show
						</a>
					</td>
					                            
					<td width="10px">
						<a href="#" class="btn btn-warning btn-sm" v-on:click.prevent="editUrlStatistics(url)">
							Edit
						</a>
					</td>

					<td width="10px">
						<a href="#" class="btn btn-danger btn-sm" v-on:click.prevent="deleteUrl(url)">
							Delete
						</a>
					</td>
					
				</tr>

			</tbody>

		</table>

