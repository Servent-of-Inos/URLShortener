{% extends 'base.html.twig' %}

{% block title %}Url Shortner{% endblock %}

{% block stylesheets %}

	<link rel="stylesheet" href="{{ asset('build/css/app.css') }}">

{% endblock %}

{% block body %}

	<div class="container">

		<div id="target" class="row">

	        <div class="col-xs-4">

	        	<h1 class="page-header">Url Shortner</h1>

	        </div>

	        <div class="col-sm-12">

                <b-btn v-b-modal.create variant="primary btn-sm">Add Url</b-btn>

	        </div>

		<table class="table table-hover table-striped">
		                    
			<thead>

				<tr>
					<th>â„–</th>
					<th>Long Url</th>
					<th>Short Url</th>
					<th>Lifetime</th>
					<th>Active</th>
					<th colspan="2">
						&nbsp;
					</th>
				</tr>

			</thead>

			<tbody>

				<tr v-for="url in urls">

					<td>${ url.id }</td>
	                <td>${ url.long_url }</td>
	                <td>${ url.short_url }</td>
	                <td>${ url.lifetime }</td>
	                <td><input type="checkbox" id="checkbox" v-model="url.is_active"></td>

	                <td width="10px">
						<a href="#" class="btn btn-success btn-sm" v-on:click.prevent="deleteUrl(url)">
							View statistics
						</a>
					</td>

					<td width="10px">
						<a href="#" class="btn btn-warning btn-sm" v-on:click.prevent="editUrlStatistics(url)">
							Edit
						</a>
					</td>
					                            
					<td width="10px">
						<a href="#" class="btn btn-danger btn-sm" v-on:click.prevent="deleteUrl(url)">
							Remove
						</a>
					</td>
				
				</tr>

			</tbody>

		</table>

		{{ include('url_shortener/partials/create.html.twig')}}
		{#{{ include('url_shortener/partials/edit.html.twig')}}
		{{ include('url_shortener/partials/show.html.twig')}} #}

		</div>
	</div>

{% endblock %}

{% block javascripts %}

	<script src="{{ asset('build/js/app.js') }}"></script>
	
{% endblock %}
